<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />
    <property name="filePath" value="/app/playnomm/logs" />

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="infoFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 로그 파일 경로 및 파일명 -->
            <fileNamePattern>${filePath}/info.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- 용량 제한 -->
            <maxFileSize>10MB</maxFileSize>
            <!--  365일 지난 파일 삭제 -->
            <maxHistory>365</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="accessFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 로그 파일 경로 및 파일명 -->
            <fileNamePattern>${filePath}/access.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- 용량 제한 -->
            <maxFileSize>10MB</maxFileSize>
            <!--  365일 지난 파일 삭제 -->
            <maxHistory>365</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="bcFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 로그 파일 경로 및 파일명 -->
            <fileNamePattern>${filePath}/bc.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- 용량 제한 -->
            <maxFileSize>10MB</maxFileSize>
            <!--  365일 지난 파일 삭제 -->
            <maxHistory>365</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <logger level="info" name="jdbc.sqltiming" additivity="false">
        <appender-ref ref="infoFile"/>
    </logger>
    <logger level="info" name="jdbc.resultsettable" additivity="false">
        <appender-ref ref="infoFile"/>
    </logger>
    <logger level="off" name="jdbc.audit" additivity="false">
        <appender-ref ref="infoFile"/>
    </logger>
    <logger level="off" name="jdbc.sqlonly" additivity="false">
        <appender-ref ref="infoFile"/>
    </logger>
    <logger level="off" name="jdbc.resultset" additivity="false">
        <appender-ref ref="infoFile"/>
    </logger>
    <logger level="off" name="jdbc.connection" additivity="false">
        <appender-ref ref="infoFile"/>
    </logger>
    <logger level="info" name="com.playnomm.grpc.bc.server.service" additivity="false">
        <appender-ref ref="bcFile"/>
    </logger>
    <logger level="info" name="com.hzn.grpc.server" additivity="false">
        <appender-ref ref="infoFile"/>
    </logger>

    <root level="info">
        <appender-ref ref="console"/>
    </root>
</configuration>
